//16. Write a function that counts the digits of the number and reverses the number using pass by reference.
#include<stdio.h>
void parthogay(int *p,int *q,int *r)
{
    int z;
     *r=0,*q=0;
    while(*p!=0)
    {
         z=*p%10;
          *q=z+(*q)*10;
       *p=*p/10;
        (*r)++;
    }

}
int main()
{
    int num,rev,count;
  printf("Enter the number : ");
  scanf("%d",&num);
    parthogay(&num,&rev,&count);
   printf("counted numbers are %d\n",count);
    printf("Reversed number is %d",rev);
}
