//Write a program to count how many positive and negative numbers or odd and even numbers are in an
//array using pointer traversal.
#include<stdio.h>
int main ()
{
	int *p,n,i;
printf("Enter array Size : ");
scanf("%d",&n);
int a[n];
p=a;
for(i=0;i<n;i++)
{
    scanf("%d",(a+i));
}
int poev=0,poodd=0,negev=0,negodd=0;
for(i=0;i<n;i++)
{
    if (a[i]>0)
    {

        if(a[i]%2==0)
        {
            poev++;
        }
        else
        {
            poodd++;
        }
    }


    if (a[i]<0)
    {

        if(a[i]%2==0)
        {
            negev++;
        }
        else
        {
            negodd++;
        }
    }
}
printf("positive even : %d\n",poev);
printf("positive Odd : %d\n",poodd);
printf("Negative even : %d\n",negev);
printf("Negative Odd : %d\n",negodd);
//printf("%d",poeven);

}
